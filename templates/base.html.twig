<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/styles.css') }}">
        <script>
            // JavaScript pour gérer l'affichage du menu burger
            const burgerButton = document.getElementById('burger-button');
            const menu = document.getElementById('menu');

            burgerButton.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
        </script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-gray-100">

    <header class="bg-white shadow-md">
        <nav class="container mx-auto p-4 flex justify-between items-center">

            <div class="font-bold text-red-500">
                <a href="{{ path('home_public') }}" class="lg:hidden block text-xl ">OFB</a>
                <a href="{{ path('home_public') }}" class="hidden lg:block text-2xl">Ouest Fitness Body</a>
            </div>

            <!-- Bouton burger (visible uniquement sur mobile) -->
            <button id="burger-button" class="lg:hidden text-gray-800 focus:outline-none" aria-label="Menu">
                <!-- Icône burger -->
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>

            <!-- Menu (caché en mobile, visible en desktop) -->
            <ul id="menu" class="hidden lg:flex lg:space-x-4 flex-col lg:flex-row space-y-2 lg:space-y-0 absolute lg:static top-16 left-0 w-full lg:w-auto bg-white lg:bg-transparent p-4 lg:p-0 shadow lg:shadow-none z-50">
                <li><a href="#" class="text-gray-800 hover:text-blue-600">Les concours</a></li>
                <li><a href="#" class="text-gray-800 hover:text-blue-600">Les exposants</a></li>
                <li><a href="#" class="text-gray-800 hover:text-blue-600">Les cours</a></li>
                <li><a href="#" class="text-gray-800 hover:text-blue-600">L'équipe Ouest Fitness Body</a></li>
                <!-- Ajoutez d'autres liens si nécessaire -->
            </ul>
        </nav>
    </header>

    <main class="container mx-auto p-4">
        {% block body %}{% endblock %}
    </main>
    </body>
</html>
