<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Ouest Fitness Body{% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/styles.css') }}">
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_script_tags('app') }}
        <script>
            // JavaScript pour gérer l'affichage du menu burger
            const burgerButton = document.getElementById('burger-button');
            const menu = document.getElementById('menu');

            burgerButton.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
        </script>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
        {% endblock %}
    </head>
    <body class=" bg-gray-300">

    <header class="bg-gray-200 shadow-md">
        <nav class="container mx-auto p-4 flex justify-between items-center">
            <!-- Logo -->
            <div class="font-bold text-red-500">
                <a href="{{ path('home_public') }}" class="lg:hidden block text-xl">OFB</a>
                <a href="{{ path('home_public') }}" class="hidden lg:block text-2xl">Ouest Fitness Body</a>
            </div>

            <!-- Bouton burger (visible uniquement sur mobile) -->
            <button id="burger-button" class="lg:hidden text-gray-800 focus:outline-none" aria-label="Menu">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>

            <!-- Menu principal -->
            <ul id="menu" class="hidden lg:flex lg:space-x-2 flex-col lg:flex-row space-y-2 lg:space-y-0 absolute lg:static top-16 left-0 w-full lg:w-auto bg-white lg:bg-transparent p-4 lg:p-0 shadow lg:shadow-none z-50">

                <!-- Groupe 1 : Users & groupes -->
                <li class="relative group">
                    <a href="#" class="text-gray-800 hover:text-blue-600 py-2 px-4 rounded inline-flex items-center font-semibold">
                        Gestion utilisateurs et groupes
                    </a>
                    <ul class="absolute hidden group-hover:block space-y-2 mt-2 lg:mt-0 bg-white p-4 shadow-lg rounded z-10">
                        <li><a href="{{ path('app_admin_index') }}" class="text-gray-800 hover:text-blue-600">Gestion des administrateurs</a></li>
                        <li><a href="{{ path('app_exhibitors_index') }}" class="text-gray-800 hover:text-blue-600">Gestion des exposants</a></li>
                        <li><a href="{{ path('app_exhibitor_group_index') }}" class="text-gray-800 hover:text-blue-600">Gestion des groupes d'exposants</a></li>
                        <li><a href="{{ path('app_member_index') }}" class="text-gray-800 hover:text-blue-600">Gestion de l'équipe</a></li>
                    </ul>
                </li>

                <li>
                    <a href="{{ path('app_event_index') }}" class="text-gray-800 hover:text-blue-600 py-2 px-4 rounded inline-flex items-center font-semibold">
                        Gestion des événements
                    </a>
                </li>

                <!-- Groupe 2 : Articles -->
                <li class="relative group">
                    <a href="#" class="text-gray-800 hover:text-blue-600 py-2 px-4 rounded inline-flex items-center font-semibold">
                        Gestion des articles
                    </a>
                    <ul class="absolute hidden group-hover:block space-y-2 mt-2 lg:mt-0 bg-white p-4 shadow-lg rounded z-10">
                        <li><a href="{{ path('app_competition_index') }}" class="text-gray-800 hover:text-blue-600">Gestion des concours</a></li>
                        <li><a href="{{ path('app_dashboard_article_index') }}" class="text-gray-800 hover:text-blue-600">Gestion des articles</a></li>
                        <li><a href="{{ path('app_exercise_index') }}" class="text-gray-800 hover:text-blue-600">Gestion des cours/séances</a></li>
                    </ul>
                </li>
                {% if app.user %}
                    <li>
                        <a href="{{ path('logout') }}" class="text-gray-800 hover:text-blue-600 py-2 px-4 rounded inline-flex items-center font-semibold">
                            Déconnexion
                        </a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('login') }}" class="text-gray-800 hover:text-blue-600 py-2 px-4 rounded inline-flex items-center font-semibold">
                            Connexion
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </header>

    <main class="container mx-auto p-2">
        {% block body %}{% endblock %}
    </main>
    </body>
</html>
