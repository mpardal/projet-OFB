{% extends 'base_private.html.twig' %}

{% block title %} - Gestion des concours{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-6">Liste des concours</h1>

        <a href="{{ path('app_competition_create') }}" class="rounded bg-white hover:text-gray-700 text-black font-bold py-2 px-4 my-4 border border-black">Créer un concours</a>

        <div class="overflow-x-auto shadow-md rounded-lg mt-6">
            <h2 class="text-lg font-semibold mb-2">Liste des concours actifs</h2>
            <table class="min-w-full bg-white border border-gray-200">
                <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titre</th>
                    <th class="py-3 px-6 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {% for competition in competitions %}
                    <tr class="hover:bg-gray-100">
                        <td class="py-4 px-6 whitespace-nowrap text-sm text-gray-500">{{ competition.title }}</td>
                        <td class="py-4 px-6 whitespace-nowrap text-right text-sm font-medium">
                            <!-- Lien pour l'édition -->
                            <a href="{{ path('app_competition_edit', { id: competition.id }) }}" class="text-blue-600 hover:text-blue-900 inline-flex items-center">
                                {{ include('icons/edit.html.twig') }}
                            </a>
                            <!-- Lien pour la suppression avec espacement -->
                            <a href="{{ path('app_competition_delete', { id: competition.id }) }}" class="text-red-600 hover:text-red-900 ml-4 inline-flex items-center">
                                {{ include('icons/trash.html.twig') }}
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="py-4 px-6 text-center text-sm text-gray-500">Aucun concours trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="overflow-x-auto shadow-md rounded-lg mt-6">
            <h2 class="text-lg font-semibold mb-2">Liste des concours non-actifs</h2>
            <table class="min-w-full bg-white border border-gray-200">
                <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titre</th>
                    <th class="py-3 px-6 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {% for competition in competitionsArchived %}
                    <tr class="hover:bg-gray-100">
                        <td class="py-4 px-6 whitespace-nowrap text-sm text-gray-500">{{ competition.title }}</td>
                        <td class="py-4 px-6 whitespace-nowrap text-right text-sm font-medium">
                            <!-- Lien pour l'édition -->
                            <a href="{{ path('app_competition_edit', { id: competition.id }) }}" class="text-blue-600 hover:text-blue-900 inline-flex items-center">
                                {{ include('icons/edit.html.twig') }}
                            </a>
                            <!-- Lien pour la suppression avec espacement -->
                            <a href="{{ path('app_competition_reactivate', { id: competition.id }) }}" class="text-green-500 hover:text-green-700 ml-4 inline-flex items-center">
                                {{ include('icons/reload.html.twig') }}
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="py-4 px-6 text-center text-sm text-gray-500">Aucun concours trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}