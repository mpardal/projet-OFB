{% extends 'base_private.html.twig' %}

{% block title %} - Création d'un nouvel exposant{% endblock %}

{% block body %}
    <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Création d'un nouvel exposant</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(form.firstname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.firstname, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.firstname, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>

        <div>
            {{ form_label(form.lastname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.lastname, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.lastname, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>

        <div>
            {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.password, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>

        <div>
            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.email, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>

        <div>
            {{ form_label(form.exhibitorGroup, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.exhibitorGroup, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.exhibitorGroup, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>

        <div class="text-center">
            {{ form_widget(form.submit, {'attr': {'class': 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}